<h3>タスク一覧</h3>

<%= notice %>

<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true"), class: "sort_expired_button" %>

<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true"), class: "sort_priority_button" %>

<%= form_with(model: Task.new, method: :get, local: true) do |f| %>
  <div class="input-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="btn-group">
  <%= f.label :status %>
  <%= f.select :status, [['未着手','未着手'], ['着手中', '着手中'], ['完了', '完了']], {include_blank: true}  %>
  </div>
  <%= f.submit '検索する', id: "search", class: "btn btn-primary" %>
<% end %>
<%= link_to '一覧に戻る', tasks_path %>


<table class="table">
  <tr>
    <th>タスク名</th>
    <th>詳細</th>
    <th>優先順位</th>
    <th>ステータス</th>
    <th>作成時間</th>
    <th>終了期限</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td class="task_name"><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.priority_i18n %></td>
    <td><%= task.status %></td>
    <td><%= task.created_at.strftime("%Y/%m/%d %H:%M") %></td>
    <td class="task_expired_at"><%= task.expired_at %></td>
    <td><%= link_to '詳細', task_path(task.id) %>
    <td><%= link_to '編集', edit_task_path(task.id) %>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除しますか' } %>
  </tr>
<% end %>
</table>

<%= link_to '新規タスクを登録する', new_task_path %>

<%= paginate @tasks %>

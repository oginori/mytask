<h1>管理者画面</h1>

<table class="table">
  <tr>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th>管理者権限</th>
    <th>編集</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td>
      <% if user.admin? %>
        <%= link_to '権限削除', admin_user_path(user.id), method: :put %>
      <% else %>
        <%= link_to '権限付与', admin_user_path(user.id), method: :put %>
      <% end %>
    </td>
    <td><%= link_to '編集', edit_admin_user_path(user.id) %></td>
  </tr>
  <% end %>
</table>
